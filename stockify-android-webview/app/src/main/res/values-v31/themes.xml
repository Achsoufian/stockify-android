<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- System splash theme used by your launcher activity -->
    <style name="Theme_Stockify_Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Blue background -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>

        <!-- Your centered icon (must be in res/drawable) -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- Optional tweaks -->
        <item name="android:windowSplashScreenAnimationDuration">250</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- After the splash, switch to your normal app theme -->
        <item name="postSplashScreenTheme">@style/Theme.Stockify</item>
    </style>

    <!-- Your normal app theme for Android 12+ -->
    <style name="Theme.Stockify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- If you use a separate post-splash theme name, you can alias it like this -->
    <style name="Theme.Stockify.Post" parent="@style/Theme.Stockify"/>
</resources>
