<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main app theme (same as values/) -->
    <style name="Theme.Stockify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- Android 12+ SplashScreen API -->
    <style name="Theme_Stockify_Splash" parent="Theme.SplashScreen">
        <!-- Your splash background color -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- IMPORTANT: use adaptive app icon (centered, not cropped) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- After splash, switch to your normal theme -->
        <item name="postSplashScreenTheme">@style/Theme.Stockify</item>
    </style>

</resources>
