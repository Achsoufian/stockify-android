<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme after splash -->
    <style name="Theme.Stockify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Android 12+ native splash -->
    <style name="Theme.Stockify.Launcher">
        <item name="android:windowSplashScreenBackground">@color/splash_bg</item>
        <!-- ðŸ‘‡ Use your app icon here -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_app_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/Theme.Stockify</item>
    </style>

</resources>
