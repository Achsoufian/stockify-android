<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Android 12+ system splash configuration -->
    <style name="Theme.Stockify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- blue background -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- your centered logo (we already fixed splash_icon.xml to use @mipmap/ic_launcher or @drawable/splash_logo) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- after the system splash, continue with the same app theme -->
        <item name="postSplashScreenTheme">@style/Theme.Stockify</item>
    </style>

</resources>
