<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Same theme name; Android 12+ reads these extra items -->
    <style name="Theme.Stockify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- keep your current brand colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Android 12+ splash config -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>

        <!-- After the splash, continue with the same app theme -->
        <item name="postSplashScreenTheme">@style/Theme.Stockify</item>
    </style>

</resources>
