<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme after splash -->
    <style name="Theme.Stockify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Pre-Android 12 splash (uses windowBackground) -->
    <style name="Theme.Stockify.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- This drawable paints the bg color and centers your icon -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="Theme.Stockify" parent="Theme.Material3.DayNight.NoActionBar" />

<!-- Splash theme: instant blue background before layout inflates -->
<style name="Theme_Stockify_Splash" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/splash_background</item>
    <item name="android:statusBarColor">@color/splash_background</item>
    <item name="android:navigationBarColor">@color/splash_background</item>
</style>

</resources>
