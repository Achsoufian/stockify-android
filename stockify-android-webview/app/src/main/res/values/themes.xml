<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme after splash -->
    <style name="Theme.Stockify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Old-style splash for Android 11- -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Theme used only while the splash is visible (kept for SplashActivity) -->
    <style name="Theme_Stockify_Splash" parent="Theme.Stockify" />
</resources>
